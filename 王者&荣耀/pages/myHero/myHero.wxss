/* pages/myHero/myHero.wxss *//* 常用英雄 */

.tital{
   position:fixed; 
   padding: 0 20rpx;
   top:0;
   width: 100%;
   height: 120rpx;
   /* background: pink; */
   display: flex;
   flex-direction: row;
   background: #fff;
   border-bottom: 2rpx solid #e6e5e5;
   box-shadow:0rpx 3rpx 0 0 #e6e5e5;
}
.left{
  width: 40%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: left;
  /* background: #fff; */
}
.right{
  width: 19%;
  height: 120rpx;
  font-size: 28rpx;
  color: #666;
  line-height: 120rpx;
  text-align: center;
}

/*英雄数据*/
.hero-box{
  margin-top: 120rpx;
  width: 100%;
  height: auto;
}
.hero{
  /* position: relative; */
   padding: 0 20rpx;
   top:0;
   width: 100%;
   height: 240rpx;
   /* background: pink; */
   display: flex;
   flex-direction: row;
   border-bottom: 2rpx solid #e6e5e5;
}
.hero-left{
  padding: 60rpx 0;
  width: 40%;
  height: 120rpx;
  line-height: 120rpx;
  text-align: left;
  /* background: pink; */
  display: flex;
  flex-direction: row;
}
.hero-left .left-data{
  height: 160rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
} 
/* 英雄头像 */
.left-data image{
  width: 120rpx;
  height: 120rpx;
}
.left-data .hero-lei{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #666;
}
.left-data .hero-name{
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 34rpx;
}
.hero-right{
  padding: 60rpx 0;
  width: 19%;
  height: 120rpx;
  line-height: 120rpx;
  display: flex;
  flex-direction: row;
}
.hero-right text {
 width:100%;
 text-align: center;
}
.foot{
  width: 750rpx;
  padding: 20rpx;
  line-height: 40rpx;
  height: 40rpx;
  background: #e6e5e5;
  color: #333;
  font-size: 28rpx;
  text-align: center;
}