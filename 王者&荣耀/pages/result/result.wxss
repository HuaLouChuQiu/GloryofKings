.result{
  padding-top:20rpx;
  padding-bottom: 20rpx; 
  border-top: 2rpx solid #dfdede;
  width: 100%;
  height:120rpx;
  display: flex;
  flex-direction: row;
  /* background: pink; */
}
.result .re-image{
  width: 120rpx;
  height: 120rpx;

}
.result .re-content{
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  width: 60%;
  height:120rpx;
}
.re-content .con-1{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  color: rgb(42, 182, 49);
}
.re-content .con-4{
  height: 60rpx;
  line-height: 60rpx;
  margin-left: 20rpx;
