  color: #afafaf;
}
.re-content .con-3{
  height: 60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  color: rgb(238, 61, 38);
}
.re-content .con-2{
  margin-top: 20rpx;
  height: 30rpx;
  line-height: 30rpx;
  display: flex;
  flex-direction: row;
}
.re-content .con-2 image{
  margin: 0 5rpx;
  width: 25rpx;
  height: 25rpx;
}
.re-content .con-2 text{
  font-size: 25rpx;
  color: #bfbfbf;
}
.re-right{
  margin-top:10rpx;
  width: 30%;
  height: 120rpx;
  line-height: 120rpx;
  justify-content: center;  
  display: flex;
  align-items: center;
